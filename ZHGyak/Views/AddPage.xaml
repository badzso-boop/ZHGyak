<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZHGyak.Views.AddPage"
             Title="AddPage">

    <StackLayout>
        <Label Text="Name: "/>
        <Entry Text="{Binding Item.Name}" />
        
        <Label Text="Description: "/>
        <Entry Text="{Binding Item.Description}" />
        
        <Label Text="Quantity: "/>
        <Entry Text="{Binding Item.Quantity}" />

        <Image Source="{Binding Item.ImageSource}" MaximumHeightRequest="200" />
        
        
        <Button Text="Select Image" Command="{Binding C_PickImage}" />
        <Button Text="Save" Command="{Binding C_Save}" />
        
    </StackLayout>
</ContentPage>